.chat-container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background: #f5f5f5;
}

.messages {
  flex: 1;
  padding: 20rpx;
}

.message {
  max-width: 80%;
  margin: 20rpx 0;
  padding: 20rpx;
  border-radius: 10rpx;
  word-break: break-all;
}

.user {
  margin-left: auto;
  background: #007AFF;
  color: white;
  border-radius: 20rpx 20rpx 0 20rpx;
}

.assistant {
  margin-right: auto;
  background: white;
  color: #333;
  border-radius: 20rpx 20rpx 20rpx 0;
}

.input-area {
  display: flex;
  padding: 20rpx;
  background: white;
  border-top: 1rpx solid #eee;
}

.input {
  flex: 1;
  height: 72rpx;
  padding: 0 20rpx;
  border: 1rpx solid #eee;
  border-radius: 36rpx;
  background: #f9f9f9;
  margin-right: 20rpx;
}

.send-btn {
  width: 120rpx !important;
  height: 72rpx;
  line-height: 72rpx;
  font-size: 28rpx;
  padding: 0;
  margin: 0;
  background: #007AFF;
  color: white;
  border-radius: 36rpx;
}

.send-btn[disabled] {
  background: #ccc;
  color: #fff;
}
