.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background: #fff;
}

/* AI Info */
.ai-info {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx 0;
}

.avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  margin-bottom: 20rpx;
}

.ai-name {
  font-size: 36rpx;
  font-weight: 500;
}

/* Messages */
.messages {
  flex: 1;
  padding: 20rpx 30rpx;
}

.message {
  max-width: 80%;
  margin: 20rpx 0;
  word-wrap: break-word;
  position: relative;
}

.message-content {
  padding: 24rpx 36rpx;
  font-size: 36rpx;
  line-height: 1.5;
  position: relative;
}

.message-footer {
  margin-top: 16rpx;
  display: flex;
  align-items: center;
}

.user {
  margin-left: auto;
}

.user .message-content {
  background: #4080FF;
  color: white;
  border-radius: 20rpx;
}

.assistant {
  margin-right: auto;
}

.assistant .message-content {
  background: #fff;
  color: #333;
  border-radius: 20rpx;
  border: 2rpx solid rgba(0, 0, 0, 0.1);
}

.copy-btn {
  background: none;
  border: none;
  font-size: 24rpx;
  color: #999;
  padding: 0;
  margin: 0;
  display: flex;
  align-items: center;
  gap: 4rpx;
}

.copy-btn::after {
  display: none;
}

.copy-icon {
  font-size: 28rpx;
}

/* Suggestions */
.suggestions {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  margin: 20rpx 0;
}

.suggestion-item {
  display: inline-block;
  padding: 20rpx 36rpx;
  background: #fff;
  border: 2rpx solid #e5e5e5;
  border-radius: 40rpx;
  font-size: 32rpx;
  color: #666;
  max-width: fit-content;
}

/* Input Area */
.input-area {
  padding: 20rpx;
  background: #fff;
}

.input {
  position: relative;
  padding: 6rpx;
  border-radius: 40rpx;
  background: linear-gradient(45deg, #FF0080, #FF8C00, #40E0D0, #4169E1, #32CD32);
  background-size: 200% 200%;
  animation: gradientBorder 6s ease infinite;
}

.input textarea {
  width: 100%;
  min-height: 120rpx;
  max-height: 400rpx;
  padding: 20rpx 180rpx 60rpx 30rpx;
  font-size: 36rpx;
  background: #fff;
  border-radius: 34rpx;
  box-sizing: border-box;
}

@keyframes gradientBorder {
  0% {
    background-position: 0% 50%;
  }
  50% {
    background-position: 100% 50%;
  }
  100% {
    background-position: 0% 50%;
  }
}

.input-placeholder {
  color: rgba(0, 0, 0, 0.25);
  position: absolute;
  top: 20rpx;
  left: 30rpx;
  z-index: 1;
}

.input-actions {
  position: absolute;
  right: 20rpx;
  bottom: 10rpx;
  display: flex;
  align-items: center;
  gap: 16rpx;
  z-index: 1;
}

.char-count {
  font-size: 24rpx;
  color: #999;
}

.clear-btn {
  margin: 0;
  padding: 0;
  width: 48rpx;
  height: 48rpx;
  background: none;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
}

.clear-btn::after {
  display: none;
}

.clear-icon {
  font-size: 36rpx;
  color: #999;
}

.send-btn {
  margin: 0;
  padding: 0;
  width: 48rpx;
  height: 48rpx;
  background: none;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
}

.send-btn::after {
  display: none;
}

.send-icon {
  font-size: 36rpx;
  color: #ccc;
}

.send-btn:not([disabled]) .send-icon {
  color: #07c160;
}

/* Footer */
.footer {
  padding: 20rpx 0;
  text-align: center;
}

.footer-text {
  font-size: 24rpx;
  color: #999;
}
