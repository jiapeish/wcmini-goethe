.container {
  min-height: 100vh;
  background: #f7f7f7;
}

.profile-section {
  background: #fff;
  padding: 40rpx 30rpx;
  margin-bottom: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.avatar-wrapper {
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 30rpx;
  border-radius: 50%;
  overflow: hidden;
  background: #f0f0f0;
}

.default-avatar {
  width: 100%;
  height: 100%;
}

.login-btn {
  width: 60% !important;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 32rpx;
  border-radius: 40rpx;
  background: #07C160 !important;
}

.user-info {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  margin-bottom: 20rpx;
}

.nickname {
  font-size: 34rpx;
  color: #333;
  font-weight: 500;
}

.menu-list {
  background: #fff;
  margin-top: 20rpx;
}

.menu-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #eee;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-text {
  font-size: 30rpx;
  color: #333;
}

.menu-right {
  display: flex;
  align-items: center;
}

/* 统一数字显示样式 */
.points, .count {
  background: #f0f0f0;
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  color: #666;
  margin-right: 10rpx;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.arrow {
  color: #ccc;
  font-size: 32rpx;
}

.menu-item:active {
  background-color: #f9f9f9;
}
