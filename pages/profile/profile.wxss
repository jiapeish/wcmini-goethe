.container {
  min-height: 100vh;
  background: #f7f7f7;
}

.profile-section {
  background: #fff;
  padding: 40rpx 30rpx;
  margin-bottom: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.profile-button {
  background: transparent !important;
  padding: 0 !important;
  width: auto !important;
  line-height: 1 !important;
  border: none !important;
  display: flex !important;
  flex-direction: column !important;
  align-items: center !important;
}

.profile-button::after {
  display: none;
}

.avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-bottom: 20rpx;
}

.avatar image {
  width: 100%;
  height: 100%;
}

.nickname {
  font-size: 32rpx;
  color: #333;
}

.menu-list {
  background: #fff;
  margin-top: 20rpx;
}

.menu-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #eee;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-text {
  font-size: 30rpx;
  color: #333;
}

.menu-right {
  display: flex;
  align-items: center;
}

/* 统一数字显示样式 */
.points, .count {
  background: #f0f0f0;
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  color: #666;
  margin-right: 10rpx;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.arrow {
  color: #ccc;
  font-size: 32rpx;
}

.menu-item:active {
  background-color: #f9f9f9;
}

/* 移除按钮的默认边框 */
.login-button::after {
  border: none;
}

/* 确保按钮在点击时有反馈效果 */
.login-button:active {
  opacity: 0.8;
}

/* 移除按钮的所有默认样式 */
.avatar-wrapper::after {
  display: none !important;
}

button {
  margin: 0 !important;
  padding: 0 !important;
  line-height: 1 !important;
  background: transparent !important;
}
