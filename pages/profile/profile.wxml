<view class="container">
  <!-- Not logged in state -->
  <view class="profile-section" wx:if="{{!userInfo}}">
    <view class="avatar-wrapper">
      <image class="default-avatar" src="/pages/images/user.png" mode="aspectFit"></image>
    </view>
    <button class="login-btn" type="primary" bindtap="handleLogin">微信登录</button>
  </view>

  <!-- Logged in state -->
  <view class="profile-section" wx:else>
    <view class="user-info">
      <image class="avatar" src="{{userInfo.avatarUrl}}" mode="aspectFit"></image>
      <text class="nickname">{{userInfo.nickName}}</text>
    </view>
  </view>

  <!-- Menu items -->
  <view class="menu-list">
    <view class="menu-item" bindtap="handleMenuClick" data-menu="我的学习记录">
      <text class="menu-text">我的学习记录</text>
      <view class="menu-right">
        <text class="arrow">></text>
      </view>
    </view>
    <view class="menu-item" bindtap="handleMenuClick" data-menu="我的收藏">
      <text class="menu-text">我的收藏</text>
      <view class="menu-right">
        <text class="arrow">></text>
      </view>
    </view>
    <view class="menu-item" bindtap="handleMenuClick" data-menu="我的积分">
      <text class="menu-text">我的积分</text>
      <view class="menu-right">
        <text class="points">{{points}}</text>
        <text class="arrow">></text>
      </view>
    </view>
    <view class="menu-item" bindtap="handleMenuClick" data-menu="设置">
      <text class="menu-text">设置</text>
      <view class="menu-right">
        <text class="arrow">></text>
      </view>
    </view>
  </view>
</view>
