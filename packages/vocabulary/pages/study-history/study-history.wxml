 <view class="container">
  <view class="loading" wx:if="{{loading}}">
    <text>加载中...</text>
  </view>

  <block wx:elif="{{historyList.length === 0}}">
    <view class="empty-state">
      <text class="empty-text">还没有学习记录哦</text>
      <text class="empty-tip">快去首页学习单词吧！</text>
    </view>
  </block>

  <view class="history-list" wx:else>
    <view class="history-item" 
          wx:for="{{historyList}}" 
          wx:key="timestamp" 
          bindtap="handleHistoryTap"
          data-id="{{item.wordListId}}">
      <view class="history-content">
        <view class="history-title">第{{item.wordListId}}组单词</view>
        <view class="history-info">
          <text class="word-count">{{item.totalWords}}个单词</text>
          <text class="study-progress">学习进度: {{item.progress}}%</text>
        </view>
      </view>
      <view class="history-time">
        <text>{{item.timestamp}}</text>
      </view>
      <view class="arrow">></view>
    </view>
  </view>
</view>
