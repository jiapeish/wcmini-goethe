.container {
  min-height: 100vh;
  background: #f7f7f7;
  padding: 20rpx;
}

.settings-group {
  background: #fff;
  border-radius: 16rpx;
  padding: 20rpx;
  margin-bottom: 30rpx;
}

.group-title {
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
  padding: 20rpx;
  border-bottom: 1rpx solid #eee;
}

.setting-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 20rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.setting-item:last-child {
  border-bottom: none;
}

.setting-label {
  font-size: 28rpx;
  color: #333;
}

.picker-content {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #666;
}

.color-preview {
  width: 32rpx;
  height: 32rpx;
  border-radius: 50%;
  margin-right: 10rpx;
  border: 1rpx solid #eee;
}

.arrow {
  color: #ccc;
  margin-left: 10rpx;
}

/* 预览区域 */
.preview-section {
  background: #fff;
  border-radius: 16rpx;
  padding: 20rpx;
  margin-bottom: 30rpx;
}

.preview-title {
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
  padding: 20rpx;
  border-bottom: 1rpx solid #eee;
}

.preview-card {
  padding: 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  background: #fff;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  margin: 20rpx 0;
}

.preview-word {
  font-size: 40rpx;
  margin-bottom: 10rpx;
}

.preview-type {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.preview-meaning {
  font-size: 28rpx;
  color: #e74c3c;
}

/* 按钮区域 */
.button-section {
  padding: 20rpx;
}

.reset-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  background: #f5f5f5;
  color: #666;
  border-radius: 44rpx;
  font-size: 28rpx;
  border: none;
}

.reset-btn::after {
  border: none;
}

.reset-btn:active {
  opacity: 0.8;
}

/* 选择器样式 */
picker {
  flex: 1;
  margin-left: 20rpx;
}

.picker-content {
  display: flex;
  justify-content: flex-end;
  align-items: center;
}
