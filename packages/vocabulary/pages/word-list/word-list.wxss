.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background: #f5f5f5;
}

.loading {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
}

.word-card {
  flex: 1;
  display: flex;
  flex-direction: column;
  padding: 30rpx;
}

.progress {
  text-align: center;
  margin-bottom: 30rpx;
  color: #666;
  font-size: 28rpx;
}

.card-content {
  flex: 1;
  background: white;
  border-radius: 20rpx;
  padding: 40rpx;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
  position: relative;
  display: flex;
  flex-direction: column;
}

.favorite-btn {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  padding: 20rpx;
}

.star {
  color: #ddd;
  font-size: 48rpx;
}

.favorite-btn.active .star {
  color: #FFD700;
}

.word-section {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-bottom: 40rpx;
}

.word {
  text-align: center;
  margin-bottom: 20rpx;
  font-weight: 500;
}

.type {
  color: #666;
  font-size: 32rpx;
  margin-top: 10rpx;
}

.example-section {
  margin-bottom: 30rpx;
  padding: 20rpx;
  background: #f9f9f9;
  border-radius: 10rpx;
}

.example {
  color: #666;
  font-size: 28rpx;
  line-height: 1.6;
}

.meaning-section {
  margin-bottom: 30rpx;
  padding: 20rpx;
  background: #f0f7ff;
  border-radius: 10rpx;
  opacity: 0;
  transition: opacity 0.3s ease;
}

.meaning-section.show {
  opacity: 1;
}

.meaning {
  color: #333;
  font-size: 32rpx;
  line-height: 1.6;
}

.verb-forms {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
  padding: 20rpx;
  background: #f9f9f9;
  border-radius: 10rpx;
  font-size: 28rpx;
  color: #666;
}

.controls {
  display: flex;
  justify-content: space-between;
  gap: 20rpx;
  margin-top: 30rpx;
}

.control-btn {
  flex: 1;
  font-size: 28rpx;
  padding: 20rpx;
  border-radius: 40rpx;
  background: white;
  color: #333;
  border: 2rpx solid #e0e0e0;
}

.control-btn::after {
  display: none;
}

.control-btn[disabled] {
  background: #f5f5f5;
  color: #999;
}

.show-btn {
  background: #4080FF;
  color: white;
  border: none;
}

.show-btn:active {
  opacity: 0.9;
}
