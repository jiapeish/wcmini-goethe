.container {
  padding: 30rpx;
  background: #f5f5f5;
  min-height: 100vh;
}

.loading {
  text-align: center;
  padding: 40rpx;
  color: #999;
}

/* 单元标题样式 */
.unit-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  padding: 20rpx 10rpx;
  margin: 20rpx 0;
  position: relative;
  display: flex;
  align-items: center;
}

.unit-title::before {
  content: '';
  width: 6rpx;
  height: 32rpx;
  background: #1890ff;
  margin-right: 16rpx;
  border-radius: 3rpx;
}

/* 分割线样式 */
.divider {
  height: 1rpx;
  background: #e8e8e8;
  margin: 30rpx 0;
  width: 100%;
}

/* 单词卡片网格 */
.word-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
  padding: 10rpx;
}

.word-card {
  position: relative;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  transition: transform 0.2s ease;
}

.word-card:active {
  transform: scale(0.98);
}

.card-content {
  padding: 30rpx;
  min-height: 160rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.card-info {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.title {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
}

.count {
  font-size: 24rpx;
  color: #666;
}

/* 进度条样式 */
.progress-bar {
  height: 8rpx;  /* 增加高度 */
  background: rgba(0, 0, 0, 0.1);  /* 调整底色透明度 */
  border-radius: 4rpx;
  margin-top: 20rpx;
  overflow: hidden;
  position: relative;  /* 添加定位 */
}

.progress {
  position: absolute;  /* 绝对定位 */
  left: 0;
  top: 0;
  height: 100%;
  background: #4CAF50;  /* 使用更明显的绿色 */
  border-radius: 4rpx;
  transition: width 0.3s ease;
}
