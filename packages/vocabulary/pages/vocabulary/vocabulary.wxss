.container {
  padding: 20rpx;
  background: #f5f5f5;
}

.loading {
  text-align: center;
  padding: 40rpx;
  color: #999;
}

.unit-title {
  font-size: 36rpx;
  font-weight: bold;
  margin: 30rpx 20rpx 20rpx;
  color: #333;
}

.word-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
  padding: 0 20rpx;
}

.word-card {
  border-radius: 20rpx;
  overflow: hidden;
}

.card-content {
  padding: 20rpx;
  border-radius: 20rpx;
  height: 120rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.card-info {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
}

.count {
  font-size: 26rpx;
  color: rgba(0, 0, 0, 0.6);
}

.divider {
  height: 2rpx;
  background: #eee;
  margin: 40rpx 20rpx;
}
