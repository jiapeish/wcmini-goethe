.container {
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  height: 100vh;
  box-sizing: border-box;
  background: #f5f5f5;
}

.unit-title {
  font-size: 36rpx;
  font-weight: bold;
  text-align: center;
  margin-bottom: 20rpx;
}

.progress-bar {
  width: 100%;
  height: 10rpx;
  background: #eee;
  border-radius: 5rpx;
  margin-bottom: 20rpx;
}

.progress {
  height: 100%;
  background: linear-gradient(90deg, #4080FF, #87CEEB);
  border-radius: 5rpx;
  transition: width 0.3s ease;
}

.nav-buttons {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 20rpx;
  margin-bottom: 30rpx;
}

.nav-btn {
  font-size: 28rpx;
  padding: 12rpx 30rpx;
  border-radius: 30rpx;
  background: white;
  color: #333;
  border: 2rpx solid #e0e0e0;
  min-height: unset;
  line-height: 1.4;
}

.nav-btn[disabled] {
  background: #f5f5f5;
  color: #999;
}

.nav-btn::after {
  display: none;
}

.level-info {
  font-size: 28rpx;
  color: #666;
}

.game-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 15rpx;
  padding: 15rpx;
  margin-bottom: 30rpx;
  width: 100%;
  box-sizing: border-box;
}

.tile {
  aspect-ratio: 1;
  background: white;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 10rpx;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
  border: 2rpx solid #e0e0e0;
}

.tile-text {
  font-size: 28rpx;
  text-align: center;
  word-break: break-word;
  line-height: 1.4;
  padding: 10rpx;
}

.tile.selected {
  border-color: #4080FF;
  transform: scale(0.95);
  background: #f0f7ff;
}

.tile.matched {
  visibility: hidden;
  opacity: 0;
  transform: scale(0);
}

.score-info {
  text-align: center;
  font-size: 28rpx;
  color: #666;
  margin: 20rpx 0;
}

.button-area {
  padding: 20rpx;
  text-align: center;
}

.next-btn {
  background: linear-gradient(135deg, #4080FF, #87CEEB);
  color: white;
  border-radius: 40rpx;
  padding: 20rpx 60rpx;
  font-size: 32rpx;
  border: none;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
}

.next-btn::after {
  border: none;
}
